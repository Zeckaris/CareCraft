{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,                   // ← This overrides the base tsconfig — critical!
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",                // Explicitly set (good practice)
    "rootDir": "./src",                // Explicitly set
    "declaration": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"]
}