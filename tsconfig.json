{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node"],
    "allowJs": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,   
    "exactOptionalPropertyTypes": false
  },
  "include": ["src/**/*"]
}